<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
</head>
<body>
	<form action="/movies/edit/<%= pelicula.id %> " method="POST" enctype="multipart/form-data">
		<label for="">Titulo pelicula</label> <input type="text" name="title" value=<%= pelicula.title %>><br>
		<label for="">Rating</label> <input type="number" name="rating" value=<%= pelicula.rating %>><br>
		<label for="">Premios</label> <input type="number" name="awards" value=<%= pelicula.awards %>><br>
		<label for="">Fecha de estreno</label> <input type="date" name="release_date" value=<%= pelicula.release_date %>><br>
		<label for="">Duración</label> <input type="number" name="length" value=<%= pelicula.length %>><br>
		<label for="">Género</label>
		<select name="genre_id" id="">
			<% for(let i = 0; i < genres.length; i++){ %>
				<option value=<%= genres[i].id %> ><%= genres[i].name %> </option>
			<% } %>  
		 </select>
		 <input type="file" name="image">
		<button>EDITAR</button>
	</form>
</body>
</html>